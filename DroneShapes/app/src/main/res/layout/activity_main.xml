    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:id="@+id/linearLayout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:orientation="vertical">

            <ImageView android:layout_width="match_parent" android:layout_height="450dp"
                       android:layout_marginBottom="8dp"
                       android:layout_marginRight="25dp"
                       android:layout_marginTop="25dp"
                       android:src="@drawable/YellowTriangle"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintLeft_toLeftOf="parent"
                       app:layout_constraintRight_toRightOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
            />
            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="6"
                    android:orientation="horizontal">
            <ImageButton
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    app:srcCompat="@drawable/YellowTriangle"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:id="@+id/imageButton"/>
                <ImageButton
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/RedCircle"
                        android:id="@+id/redCircle"/>
            <ImageButton
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/BlueX"
                    android:layout_weight="1"
                    android:id="@+id/imageButton2"/>
            <ImageButton
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/GreenSquare"
                    android:id="@+id/imageButton3"/>
            <ImageButton
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/BlackOval"
                    android:id="@+id/imageButton4"/>
            <ImageButton
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/PurpleStar"
                    android:id="@+id/imageButton5"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:orientation="vertical">
            <ImageView android:layout_width="match_parent" android:layout_height="450dp"
                       android:layout_marginBottom="8dp"
                       android:layout_marginLeft="0dp"
                       android:layout_marginRight="25dp"
                       android:layout_marginTop="25dp"
                       android:src="@drawable/RedSlash"
                       android:id="@+id/MainRight"/>
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintLeft_toLeftOf="parent"
                       app:layout_constraintRight_toRightOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
            />
            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="6"
                    android:orientation="horizontal">
                <ImageButton
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        app:srcCompat="@drawable/Yellow3"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:id="@+id/imageButton6"/>
                <ImageButton
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/RedSlash"
                        android:layout_weight="1"
                        android:id="@+id/imageButton7"/>
                <ImageButton
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/BlueSlash"
                        android:layout_weight="1"
                        android:id="@+id/imageButton8"/>
                <ImageButton
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/GreenPlus"
                        android:layout_weight="1"
                        android:id="@+id/imageButton9"/>
                <ImageButton
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/BlackEquals"
                        android:layout_weight="1"
                        android:id="@+id/BEquals"/>
                <ImageButton
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/PurpleAstrisk"
                        android:layout_weight="1"
                        android:id="@+id/PurpleAstrisk"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageButton
            android:layout_width="180dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/refresh"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:alpha ='.1'
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/randomize"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>